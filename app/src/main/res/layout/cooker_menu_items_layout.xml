<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_margin="12dp"
    android:id="@+id/subFoodItemCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorPrimary"
        >


        <TextView
            android:id="@+id/sub_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Food Name"
            android:textSize="25sp"
            android:fontFamily="@font/baloo"/>
        <TextView
            android:id="@+id/sub_food_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Food Description"
            android:textSize="15sp"
            android:layout_below="@+id/sub_food_name"
            android:fontFamily="@font/baloo"
            />


        <TextView
            android:id="@+id/sub_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Pkr"
            android:layout_below="@+id/sub_food_description"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/bookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Book"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/gravitas_one"
            android:layout_marginRight="5dp"
            android:elevation="20dp"/>

