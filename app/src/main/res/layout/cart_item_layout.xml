<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_marginBottom="4dp"
    android:layout_margin="10dp"
    android:id="@+id/cartCardView"
    >


    <RelativeLayout
        android:id="@+id/CartWholeItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/homecookername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/elegantButton"
            android:layout_toRightOf="@+id/checkBox"
            android:text="HomeCookName"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"

            />



        <TextView
            android:id="@+id/subFoodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tikka kabab"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:fontFamily="@font/baloo"
            />


        <TextView
            android:id="@+id/subFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 pkr"
            android:textSize="15sp"
            android:fontFamily="@font/baloo"
            android:layout_below="@+id/subFoodname"
            android:layout_toRightOf="@+id/deleteCartItem"
            android:layout_alignParentLeft="true"

            />


        <ImageView
            android:id="@+id/deleteCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/elegantButton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_delete_sweep_black_24dp" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/elegantButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:backGroundColor="#00BFFF"
            app:initialNumber="1"
            app:finalNumber="3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <CheckBox
            android:layout_alignLeft="@+id/subFoodname"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:layout_marginTop="40dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

